{
    "name": "github-enhancer",
    "version": "0.0.0",
    "packageManager": "yarn@3.0.2",
    "requires": true,
    "devDependencies": {
        "@types/chrome": "0.0.164",
        "@types/dotenv-webpack": "^7.0.3",
        "@types/firefox-webext-browser": "^94.0.0",
        "@types/glob": "^7.2.0",
        "@types/node": "^17.0.2",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "bestzip": "^2.2.0",
        "copy-webpack-plugin": "^10.2.0",
        "csstype": "^2.6.19",
        "dotenv-webpack": "^7.0.3",
        "esbuild": "^0.14.0",
        "esbuild-jest": "^0.5.0",
        "esbuild-loader": "^2.18.0",
        "esbuild-register": "^3.2.0",
        "fork-ts-checker-webpack-plugin": "^6.4.2",
        "glob": "^7.2.0",
        "if-webpack-loader": "^2.0.0",
        "jest": "^27.3.1",
        "npm-run-all": "^4.1.5",
        "preact": "^10.6.4",
        "react-colorful": "^5.5.1",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "ts-pattern": "^3.3.4",
        "typescript": "^4.5.4",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "private": true,
    "scripts": {
        "_webpack": "webpack",
        "firefox": "webpack watch --env browser=firefox --env mode=development --env typecheck=notypecheck",
        "clean": "rimraf dist",
        "build": "npm-run-all \"_webpack --env browser={1:=chrome} --env mode={2:=development} --env typecheck={3:=notypecheck}\" --",
        "build:chrome": "cross-env BROWSER=chrome webpack",
        "build:firefox": "webpack --env browser=firefox --env mode=development --env typecheck=typecheck",
        "build-all": "run-p -l \"build chrome development typecheck\" \"build chrome production typecheck\" \"build chrome-mv3 development typecheck\" \"build chrome-mv3 production typecheck\" \"build firefox development typecheck\" \"build firefox production typecheck\" \"build safari development typecheck\" \"build safari production typecheck\"",
        "watch": "npm-run-all \"_webpack watch --env browser={1:=chrome} --env mode=development --env typecheck=notypecheck\" --",
        "lint": "FORCE_COLOR=1 run-p -l \"lint:*\"",
        "lint:eslint": "eslint .",
        "lint:prettier": "prettier --check --loglevel warn .",
        "lint:typecheck": "tsc --noEmit",
        "fix": "FORCE_COLOR=1 run-s -l fix:eslint fix:prettier",
        "fix:eslint": "eslint --fix .",
        "fix:prettier": "prettier --write --loglevel warn .",
        "test": "jest",
        "commit": "git-cz",
        "release": "node release"
    },
    "workspaces": [
        "website"
    ]
}
